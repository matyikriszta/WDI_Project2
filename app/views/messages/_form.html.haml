= form_for @message :url => messages_path, :method => :post do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :to
    = f.email_field :to
  .field
    = f.label :topic
    = f.text_field :topic
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :viewed
    = f.check_box :viewed
  .actions
    = f.submit 'Send'
    = f.reset 'Cancel'
