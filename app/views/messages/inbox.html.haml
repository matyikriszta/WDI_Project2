%h1 Inbox

%table
  %tr
    %th From
    %th Topic 
    %th Content
    %th
    %th

  - @messages.conversations.each do |message|
    %tr
      %td= message.from.name
      %td= message.topic
      %td= message.body
      %td= link_to 'Reply', conversation_path(message.id)
      %td= link_to 'Archive', destroy_message_path(message.id), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

%p
  = link_to 'Sent messages', outbox_path
%p
  = link_to 'All messages', all_path
%p
  = link_to 'Trash', trash_path

= link_to t(:new_message), new_message_path