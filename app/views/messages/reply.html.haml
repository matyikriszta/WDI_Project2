- @message.conversation.each do |message|
  %p
    = message.body

%h2 Send Message

= form_tag reply_path(@message), method: :post do
  = hidden_field_tag :id, @message.id
  = hidden_field_tag :topic, @message.topic
  = label_tag :body, t(:body)
  = text_field_tag :body, nil
  = submit_tag :send

= link_to 'Back', messages_path