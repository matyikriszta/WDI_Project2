= form_for @image do |f|
  - if @image.errors.any?
    #error_explanation
      %h2= "#{pluralize(@image.errors.count, "error")} prohibited this image from being saved:"
      %ul
        - @image.errors.full_messages.each do |msg|
          %li= msg

  
  .field
    = f.label :image
    = f.file_field :image
    / = image_tag(@user.avatar_url) if @user.avatar?
    / = f.text_field :remote_avatar_url
  .field
    = f.label :title
    = f.text_field :title
  .actions
    = f.submit 'Save'
